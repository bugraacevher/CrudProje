
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>

<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover:not(.active) {
                background-color: #111;
            }

    .active {
        background-color: #04AA6D;
    }
</style>

<body>
    <ul>
        <li><a href="/Departman/Index">Departman</a></li>
        <li><a href="/Calisan/Index">Çalışan</a></li>
        <li><a href="/Login/Index">Kullanıcılar Listesi</a></li>
        <li style="float:right"><a class="active" href="/Login/Kaydet">Kayıt Ol</a></li>
    </ul>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
