@model MvcCrudProject.Data.Entities.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Ekle</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Ekle", "Login", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.KullaniciAdi)
                @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
            </div>

            @Html.HiddenFor(m => m.Id)
            <button type="submit" class="btn btn-success">Ekle</button>
        }
    </div>
</body>
</html>
