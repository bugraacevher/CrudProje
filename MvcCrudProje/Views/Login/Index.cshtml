@using MvcCrudProject.Data.Entities
@model List<Login>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Kullanıcılar</h2>

<a class="btn btn-primary" href="/Login/Ekle">Kullanıcı Ekle</a>
<h2>Kullanıcılar Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Parola</th>
            <th>Guncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kullanici in Model)
        {
            <tr>
                <td>@kullanici.KullaniciAdi</td>
                <td>@kullanici.Sifre</td>
                <td><a class="btn-primary" href="/Login/Guncelle/@kullanici.Id">Guncelle</a></td>
                <td><a class="btn-primary" href="/Login/Sil/@kullanici.Id">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
